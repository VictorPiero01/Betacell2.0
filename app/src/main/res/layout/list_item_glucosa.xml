<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardGlucosa"
        app:cardCornerRadius="15dp"
        android:padding="5dp"
        android:layout_margin="10dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#482600FF"
            android:padding="5dp">


            <ImageView
                android:id="@+id/imagen"
                android:src="@drawable/glucosa"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="-5dp"
                android:paddingTop="5dp" />

            <TextView
                android:id="@+id/txt_registro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="-90dp"
                android:layout_toEndOf="@+id/imagen"
                android:layout_toRightOf="@+id/imagen"
                android:text="Glucosa:"/>

            <TextView
                android:id="@+id/medicionGlucosa_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_toEndOf="@+id/txt_registro"
                android:layout_toRightOf="@+id/txt_registro"
                android:text="Muestra" />

            <TextView
                android:id="@+id/txt_pulso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_registro"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/imagen"
                android:layout_toRightOf="@+id/imagen"
                android:text="Condicion:" />

            <TextView
                android:id="@+id/condicion_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medicionGlucosa_db"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/txt_pulso"

                android:layout_toRightOf="@+id/txt_pulso"
                android:text="Muestra" />

            <TextView
                android:id="@+id/txt_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_pulso"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="-90dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/imagen"
                android:layout_toRightOf="@+id/imagen"
                android:text="Fecha:" />

            <TextView
                android:id="@+id/fechaGlucosa_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/condicion_db"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/txt_fecha"
                android:layout_toRightOf="@+id/txt_fecha"
                android:text="Muestra" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
