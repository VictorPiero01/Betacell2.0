<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Press"
    android:orientation="vertical"
    android:background="#FF1F596D">
    <fragment
        android:id="@+id/fragment1"
        android:name="com.example.betacell.Fragments.MenuFragment"
        android:layout_width="match_parent"
        android:layout_height="241dp" />

    <TextView
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tex_presion"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="55dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_marginHorizontal="40dp"
        />
    <EditText
        android:id="@+id/regitroPresion_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="85dp"
        android:inputType="numberDecimal"
        android:hint="5-180                 mmHg"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#C92C7893"
        android:layout_marginHorizontal="40dp"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:text="@string/text_presion2"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_marginHorizontal="40dp"
        />

    <EditText
        android:id="@+id/pulsos_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:hint="Pulsos por minuto"
        android:inputType="numberDecimal"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#C92C7893"/>

    <Button
        android:id="@+id/guardar_Presion"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_forma"
        android:elevation="5dp"
        android:text="GUARDAR"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="20sp"/>

</LinearLayout>